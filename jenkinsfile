pipeline {
    agent any

    tools {
        maven 'Maven'  // This should match the name you set in Jenkins
    }

    stages {
        stage('Build') {
            steps {
                bat 'mvn clean package'  // Use 'bat' for Windows
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the project...'
            }
        }
    }
}
