pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                bat 'mvn clean package'  // Change 'sh' to 'bat' for Windows
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the project...'
            }
        }
    }
}
