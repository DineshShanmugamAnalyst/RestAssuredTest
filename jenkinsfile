pipeline {
    agent any

    tools {
        maven 'MyMaven'  // Use the exact name from Jenkins
    }

    stages {
        stage('Build') {
            steps {
                bat 'mvn clean package'  // Windows: use 'bat'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the project...'
            }
        }
    }
}
