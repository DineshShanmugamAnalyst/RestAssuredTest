pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'  // Use 'bat' for Windows
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the project...'
            }
        }
    }
}

